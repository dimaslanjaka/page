{% extends "_layout.njk" %}

{% block title %}Cookie Manager (Pure) - WMI{% endblock %}

{% block content %}
<div class="container h-100 m-5">

  <div class="mb-2">
    <span class="me-2">Your Unique ID is</span> <b id="uniqueHash"></b>
  </div>

  <div class="h-100">
    <form action="#create" id="create" class="row row-cols-lg-auto g-3 align-items-center">
      <div class="col-12">
        <div class="input-group mb-2">
          <input type="text" class="form-control" placeholder="cookie name" value="myCookieName" name="name"
            id="cookie-name">
        </div>
      </div>

      <div class="col-12">
        <div class="input-group mx-sm-3 mb-2">
          <input type="text" class="form-control" placeholder="cookie value" value="myCookieValue" name="value"
            id="cookie-value">
        </div>
      </div>

      <div class="col-12">
        <div class="btn-group mx-sm-3 mb-2">
          <button class="btn btn-primary" type="submit">Create</button>
          <button class="btn btn-danger" type="button" id="deleteAllCookie">Delete</button>
        </div>
      </div>
    </form>
  </div>

  <div class="row mb-2">
    <pre id="allcookies" class=""></pre>
  </div>
</div>
{% endblock content %}

{% block endbody %}
<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js'></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.3/js/bootstrap.min.js'></script>
<script src="/page/assets/js/page-cookies.js"></script>
{% endblock endbody %}
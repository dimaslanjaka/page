{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "tmp/tsc",
    "checkJs": false,
    "composite": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": false,
    "lib": [
      "DOM",
      "ES2020"
    ],
    "typeRoots": [
      "./typings",
      "./node_modules/@types",
      "./node_modules/nodejs-package-types/typings"
    ],
    "types": [
      "rsuite"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "src/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@component/*": [
        "./src/components/*"
      ],
      "@route/*": [
        "./src/route/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@asset/*": [
        "./src/assets/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@util/*": [
        "./src/utils/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": [
    "./package.json",
    "./src",
    "./src/globals.d.ts",
    "./src/**/*",
    "./src/route/**/*",
    "./src/**/*.json",
    "typings"
  ],
  "exclude": [
    "**/node_modules/**",
    "./page/**/*",
    "**/dist/**",
    "**/assets/js/core.js",
    "**/assets/js/v*.js",
    "**/assets/js/gijgo*.js"
  ]
}

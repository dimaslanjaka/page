{
  "$schema": "http://json.schemastore.org/nodemon",
  "exec": "node server.js",
  "watch": [
    "./webpack.*.js",
    "./tsconfig.json",
    "./package.json",
    "./views/**/*.njk",
    "./server.js",
    "./gulpfile.js",
    "./src/**/*"
  ],
  "ignore": [
    "*.test.js",
    "*.html",
    ".vscode",
    ".gitignore",
    "gh-pages",
    "dist",
    "tests",
    "tmp",
    "temp",
    "**/node_modules/**",
    "**/build/**"
  ],
  "delay": 3000,
  "ext": "ts,js",
  "verbose": true
}
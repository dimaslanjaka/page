{
  "$schema": "http://json.schemastore.org/nodemon",
  "exec": "yarn workspace page-source run start",
  "watch": [
    "./tsconfig.json",
    "./package.json",
    "./page-source/server.js",
    "./page-source/server-core.js",
    "./page-source/src/**/*"
  ],
  "ignore": [
    "*.test.js",
    "**/.vscode",
    "**/node_modules/**"
  ],
  "delay": 3000,
  "ext": "*",
  "verbose": false
}
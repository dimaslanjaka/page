{
  "$schema": "http://json.schemastore.org/nodemon",
  "exec": "node server.js",
  "watch": [
    "./src/*.ts",
    "./index.ts",
    "./webpack.*.js",
    "./tsconfig.json",
    "./package.json",
    "./server.js",
    "*.njk",
    "*.html",
    "*.js"
  ],
  "ignore": [
    "*.test.js",
    ".vscode",
    ".gitignore",
    "gh-pages",
    "dist",
    "tests",
    "tmp",
    "temp",
    "**/node_modules/**"
  ],
  "delay": 3000,
  "ext": "ts,js",
  "verbose": true
}
{
  "$schema": "http://json.schemastore.org/nodemon",
  "exec": "node server.js",
  "watch": [
    "./tsconfig.json",
    "./package.json",
    "./views/**/*",
    "./server.js",
    "./server-core.js",
    "./src/**/*",
    "./source/**/*"
  ],
  "ignore": [
    "*.test.js",
    ".vscode",
    "**/node_modules/**"
  ],
  "delay": 3000,
  "ext": "*",
  "verbose": false
}